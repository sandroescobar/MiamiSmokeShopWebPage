<style>
  :root{
    --accent:#69CEE9;
    --ink:#fff;
    --ink-dim:rgba(255,255,255,.85);
  }

  .cart-hero{
    background: radial-gradient(1200px 500px at 50% -120px, rgba(255,255,255,.05), transparent 60%),
                linear-gradient(#0e1828, #0b1423);
    padding: 48px 0 16px;
  }

  .cart-hero-inner{
    max-width: 1100px;
    margin-inline: auto;
    padding: 56px 0 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 14px;
  }

  .cart-title{
    font-size: clamp(28px, 5.4vw, 44px);
    letter-spacing: .4px;
    margin: 0;
    color: var(--ink);
  }

  .cart-container{
    max-width: 1100px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .cart-content{
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 2rem;
  }

  .cart-items{
    background: rgba(255,255,255,.08);
    border: 1px solid rgba(255,255,255,.14);
    border-radius: 20px;
    backdrop-filter: blur(10px);
    padding: 2rem;
    width: 100%;
  }

  .cart-empty{
    text-align: center;
    padding: 3rem 2rem;
    color: var(--ink-dim);
  }

  .cart-empty svg{
    width: 80px;
    height: 80px;
    opacity: 0.5;
    margin-bottom: 1rem;
  }

  .cart-item{
    display: flex;
    gap: 1.25rem;
    padding: 1.5rem 0;
    border-bottom: 1px solid rgba(255,255,255,.08);
  }

  .cart-item:first-child{
    padding-top: 0;
  }

  .cart-item:last-child{
    border-bottom: none;
    padding-bottom: 0;
  }

  .cart-item-image{
    width: 112px;
    height: 112px;
    border-radius: 14px;
    overflow: hidden;
    background: rgba(255,255,255,.05);
    flex-shrink: 0;
    box-shadow: 0 8px 18px rgba(11,20,35,.35);
  }

  .cart-item-image img{
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-item-main{
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .cart-item-top{
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
  }

  .cart-item-name{
    font-size: 1.05rem;
    font-weight: 600;
    color: var(--ink);
    margin: 0;
  }

  .cart-item-brand{
    font-size: 0.85rem;
    color: var(--ink-dim);
    letter-spacing: .08em;
    text-transform: uppercase;
    margin: 4px 0 0;
  }

  .cart-item-bottom{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .cart-data-block{
    display: flex;
    flex-direction: column;
    gap: 4px;
    min-width: 120px;
  }

  .cart-meta-label{
    font-size: 0.7rem;
    letter-spacing: .08em;
    text-transform: uppercase;
    color: var(--ink-dim);
  }

  .cart-meta-value{
    font-size: 1rem;
    font-weight: 600;
    color: var(--ink);
  }

  .cart-line-total .cart-meta-value{
    font-size: 1.2rem;
    color: var(--accent);
  }

  .qty-control{
    display: inline-flex;
    align-items: center;
    border: 1px solid rgba(255,255,255,.18);
    border-radius: 10px;
    background: rgba(255,255,255,.04);
    overflow: hidden;
  }

  .qty-control button{
    background: none;
    border: none;
    color: var(--ink);
    cursor: pointer;
    padding: 0.45rem 0.85rem;
    font-size: 1.2rem;
    transition: opacity .2s ease;
  }

  .qty-control button:hover{
    opacity: 0.75;
  }

  .qty-control input{
    border: none;
    background: transparent;
    color: var(--ink);
    text-align: center;
    width: 56px;
    padding: 0.45rem 0;
    font-weight: 600;
  }

  .qty-control input::-webkit-outer-spin-button,
  .qty-control input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .remove-btn{
    background: rgba(255, 69, 69, 0.12);
    border: none;
    color: #ff7373;
    padding: 0.55rem 0.9rem;
    border-radius: 10px;
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .remove-btn:hover{
    background: rgba(255, 69, 69, 0.2);
    transform: translateY(-1px);
  }

  .cart-summary{
    background: rgba(255,255,255,.06);
    border: 1px solid rgba(255,255,255,.14);
    border-radius: 16px;
    backdrop-filter: blur(6px);
    padding: 2rem;
    height: fit-content;
    position: sticky;
    top: 2rem;
  }

  .summary-row{
    display: flex;
    justify-content: space-between;
    padding: 0.75rem 0;
    color: var(--ink-dim);
  }

  .summary-row.total{
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--ink);
    border-top: 2px solid rgba(255,255,255,.1);
    padding-top: 1rem;
    margin-top: 1rem;
  }

  .checkout-btn{
    width: 100%;
    padding: 1rem;
    margin-top: 1.5rem;
    background: var(--accent);
    color: #0a1222;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .checkout-btn:hover{
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(105, 206, 233, 0.4);
  }

  .continue-shopping{
    width: 100%;
    padding: 0.75rem;
    margin-top: 0.75rem;
    background: transparent;
    color: var(--accent);
    border: 1px solid var(--accent);
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .continue-shopping:hover{
    background: rgba(105, 206, 233, 0.1);
  }

  @media (max-width: 768px){
    .cart-content{
      grid-template-columns: 1fr;
    }

    .cart-summary{
      position: static;
    }

    .cart-item{
      flex-direction: column;
      gap: 1rem;
    }

    .cart-item-image{
      width: 100%;
      height: 180px;
    }

    .cart-item-top{
      flex-direction: column;
    }

    .cart-item-bottom{
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }
</style>

<!-- Cart Hero -->
<header class="cart-hero">
  <div class="cart-hero-inner">
    <h1 class="cart-title">Shopping Cart</h1>
    <p style="margin: 0; opacity: .85;">Review your items and proceed to checkout</p>
  </div>
</header>

<!-- Cart Content -->
<div class="cart-container">
  <div class="cart-content">
    <!-- Cart Items -->
    <div class="cart-items">
      <div id="cart-items-container">
        <!-- Items will be populated by JavaScript -->
      </div>
    </div>

    <!-- Cart Summary -->
    <div class="cart-summary">
      <div class="summary-row">
        <span>Subtotal:</span>
        <span id="subtotal">$0.00</span>
      </div>
      <div class="summary-row">
        <span>Tax (estimated):</span>
        <span id="tax">$0.00</span>
      </div>
      <div class="summary-row total">
        <span>Total:</span>
        <span id="total">$0.00</span>
      </div>
      <button class="checkout-btn" onclick="proceedToCheckout()">Proceed to Checkout</button>
      <button class="continue-shopping" onclick="window.location.href='/products'">Continue Shopping</button>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  renderCart();
});

function renderCart() {
  const cart = JSON.parse(localStorage.getItem('cart')) || [];
  const container = document.getElementById('cart-items-container');

  if (cart.length === 0) {
    container.innerHTML = `
      <div class="cart-empty">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        <h3>Your cart is empty</h3>
        <p>Add some products to get started!</p>
      </div>
    `;
    updateSummary(cart);
    return;
  }

  let html = '';
  cart.forEach((item, index) => {
    const quantity = Math.max(1, Number(item.quantity) || 1);
    const parsedPrice = typeof item.price === 'number'
      ? item.price
      : parseFloat(String(item.price || '').replace(/[^0-9.]/g, ''));
    const hasNumericPrice = Number.isFinite(parsedPrice);
    const unitPriceDisplay = hasNumericPrice
      ? '$' + parsedPrice.toFixed(2)
      : (item.price || '$0.00');
    const lineTotal = hasNumericPrice ? parsedPrice * quantity : null;
    const lineTotalDisplay = lineTotal !== null
      ? '$' + lineTotal.toFixed(2)
      : unitPriceDisplay;
    const imageSrc = item.image || '/images/miami_vape_logo.webp';
    const brandLabel = item.brand || item.category || 'Miami Vape Smoke Shop';

    html += `
      <div class="cart-item">
        <div class="cart-item-image">
          <img src="${imageSrc}" alt="${item.name}">
        </div>
        <div class="cart-item-main">
          <div class="cart-item-top">
            <div>
              <p class="cart-item-name">${item.name}</p>
              <p class="cart-item-brand">${brandLabel}</p>
            </div>
            <button class="remove-btn" onclick="removeItem(${index})">Remove</button>
          </div>
          <div class="cart-item-bottom">
            <div class="cart-data-block">
              <span class="cart-meta-label">Unit price</span>
              <span class="cart-meta-value">${unitPriceDisplay}</span>
            </div>
            <div class="cart-data-block">
              <span class="cart-meta-label">Quantity</span>
              <div class="qty-control" aria-label="Adjust quantity">
                <button type="button" onclick="updateQuantity(${index}, -1)">âˆ’</button>
                <input type="number" value="${quantity}" readonly aria-live="polite">
                <button type="button" onclick="updateQuantity(${index}, 1)">+</button>
              </div>
            </div>
            <div class="cart-data-block cart-line-total">
              <span class="cart-meta-label">Line total</span>
              <span class="cart-meta-value">${lineTotalDisplay}</span>
            </div>
          </div>
        </div>
      </div>
    `;
  });

  container.innerHTML = html;
  updateSummary(cart);
}

function updateQuantity(index, change) {
  const cart = JSON.parse(localStorage.getItem('cart')) || [];
  cart[index].quantity += change;
  if (cart[index].quantity < 1) {
    cart.splice(index, 1);
  }
  localStorage.setItem('cart', JSON.stringify(cart));
  renderCart();
  updateCartCount();
}

function removeItem(index) {
  const cart = JSON.parse(localStorage.getItem('cart')) || [];
  cart.splice(index, 1);
  localStorage.setItem('cart', JSON.stringify(cart));
  renderCart();
  updateCartCount();
}

function updateSummary(cart) {
  let subtotal = 0;
  cart.forEach(item => {
    // Handle both number and string prices
    const price = typeof item.price === 'number'
      ? item.price
      : parseFloat(item.price.toString().replace('$', '') || 0);

    if (!isNaN(price)) {
      subtotal += price * item.quantity;
    }
  });

  const tax = subtotal * 0.07; // 7% tax
  const total = subtotal + tax;

  document.getElementById('subtotal').textContent = '$' + subtotal.toFixed(2);
  document.getElementById('tax').textContent = '$' + tax.toFixed(2);
  document.getElementById('total').textContent = '$' + total.toFixed(2);
}

function updateCartCount() {
  const cart = JSON.parse(localStorage.getItem('cart')) || [];
  const count = cart.reduce((sum, item) => sum + item.quantity, 0);
  const countEl = document.getElementById('cart-count');
  if (countEl) {
    countEl.textContent = count;
  }
}

function proceedToCheckout() {
  const cart = JSON.parse(localStorage.getItem('cart')) || [];
  if (cart.length === 0) {
    alert('Your cart is empty. Add items before checking out.');
    return;
  }
  let shop = 'either';
  try {
    const saved = localStorage.getItem('preferredShop');
    if (saved) {
      shop = saved;
    }
  } catch (err) {}
  const url = shop ? `/checkout?shop=${encodeURIComponent(shop)}` : '/checkout';
  window.location.href = url;
}
</script>