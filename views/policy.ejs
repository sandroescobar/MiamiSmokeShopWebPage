<section class="policy-hero">
  <div class="policy-container">
    <p class="policy-eyebrow">Official Policy</p>
    <h1 class="policy-title"><%= page.title %></h1>
    <p class="policy-subtitle"><%= page.subtitle %></p>
  </div>
</section>

<section class="policy-content policy-container">
  <% page.sections.forEach(section => { %>
    <article class="policy-section">
      <h2><%= section.heading %></h2>
      <% if (section.body) { section.body.forEach(paragraph => { %>
        <p><%= paragraph %></p>
      <% }) } %>
      <% if (section.list) { %>
        <ul>
          <% section.list.forEach(item => { %>
            <li><%= item %></li>
          <% }) %>
        </ul>
      <% } %>
    </article>
  <% }) %>

  <div class="policy-contact">
    <h3>Contact</h3>
    <p>Email: <a href="mailto:<%= contact.email %>"><%= contact.email %></a></p>
    <p>Phone: <a href="tel:<%= contact.phone %>"><%= contact.phone %></a></p>
    <ul>
      <% contact.addresses.forEach(address => { %>
        <li><%= address %></li>
      <% }) %>
    </ul>
  </div>
</section>

<style>
.policy-container{max-width:920px;margin:0 auto;padding:0 20px}
.policy-hero{background:#0a1222;color:#f5f5f5;padding:48px 0}
.policy-eyebrow{text-transform:uppercase;letter-spacing:.2em;font-size:.75rem;opacity:.8;margin-bottom:12px}
.policy-title{margin:0;font-size:2.5rem}
.policy-subtitle{margin:8px 0 0;font-size:1rem;opacity:.85}
.policy-content{padding:48px 0;display:flex;flex-direction:column;gap:32px}
.policy-section h2{font-size:1.25rem;margin-bottom:12px}
.policy-section p{color:#1f2937;line-height:1.6;margin:0 0 10px}
.policy-section ul{padding-left:20px;margin:0}
.policy-section li{margin-bottom:6px;line-height:1.5}
.policy-contact{border-top:1px solid rgba(15,23,42,.12);padding-top:24px}
.policy-contact h3{margin:0 0 12px}
.policy-contact p,.policy-contact li{color:#1f2937}
.policy-contact a{color:#0a7fd6;text-decoration:none}
.policy-contact a:hover{text-decoration:underline}
@media (max-width:640px){
  .policy-title{font-size:2rem}
  .policy-content{padding:36px 0}
}
</style>
